<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    android:padding="24dp"
    tools:context=".GenderSelectionActivity">

    <!-- 1. Orqaga qaytish (Close/Back) -->
    <!-- Logikangizda ic_close ishlatilgan bo'lsa, uni qoldiramiz, lekin rangini to'g'irlaymiz -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Orqaga"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#1E293B" />

    <!-- 2. Sarlavha -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Sizga qanday murojaat \nqilishimizni xohlaysiz?"
        android:textColor="#1E293B"
        android:textSize="26sp"
        android:textStyle="bold"
        android:letterSpacing="-0.01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack" />

    <!-- Variantlar konteyneri -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <!-- 3. Variant: Ayol -->
        <LinearLayout
            android:id="@+id/optionFemale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingVertical="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ayol"
                android:textColor="#1E293B"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_keyboard_right"
                app:tint="#94A3B8" />
        </LinearLayout>

        <!-- Chiziq -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E2E8F0" />

        <!-- 4. Variant: Erkak -->
        <LinearLayout
            android:id="@+id/optionMale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingVertical="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Erkak"
                android:textColor="#1E293B"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_keyboard_right"
                app:tint="#94A3B8" />
        </LinearLayout>

        <!-- Chiziq -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E2E8F0" />

        <!-- 5. Variant: Aytishni xohlamayman -->
        <LinearLayout
            android:id="@+id/optionNone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingVertical="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Aytishni xohlamayman"
                android:textColor="#1E293B"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_keyboard_right"
                app:tint="#94A3B8" />
        </LinearLayout>

        <!-- Chiziq (Oxirgisi) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E2E8F0" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
