<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 1. TEPADAGI QISM (Sana va Status) -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F8FAFC"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Sana Ikonkasi va Matni -->
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_calendar_today"
                app:tint="#64748B" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="25 Mart, 10:00"
                android:textColor="#64748B"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <!-- Status Badge (Yumshoq Yashil) -->
            <TextView
                android:id="@+id/tvStatusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Faol"
                android:textAllCaps="true"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#10B981"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:background="@drawable/bg_status_green"
                android:backgroundTint="#ECFDF5"/>
        </LinearLayout>

        <!-- 2. ASOSIY YO'NALISH (Timeline Style) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/routeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/topBar">

            <!-- Qayerdan -->
            <TextView
                android:id="@+id/tvFromCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toshkent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1E293B"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00"
                android:textSize="14sp"
                android:textColor="#64748B"
                app:layout_constraintStart_toStartOf="@id/tvFromCity"
                app:layout_constraintTop_toBottomOf="@id/tvFromCity"/>

            <!-- O'rtadagi strelka va chiziq -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#E2E8F0"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintStart_toEndOf="@id/tvFromCity"
                app:layout_constraintEnd_toStartOf="@id/tvToCity"
                app:layout_constraintTop_toTopOf="@id/iconArrow"
                app:layout_constraintBottom_toBottomOf="@id/iconArrow"/>

            <ImageView
                android:id="@+id/iconArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="#2E5BFF"
                android:background="@drawable/shape_circle_green"
                android:backgroundTint="#EFF6FF"
                android:padding="6dp"
                app:layout_constraintStart_toEndOf="@id/tvFromCity"
                app:layout_constraintEnd_toStartOf="@id/tvToCity"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tvStartTime"/>

            <!-- Qayerga -->
            <TextView
                android:id="@+id/tvToCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Samarqand"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1E293B"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:00"
                android:textSize="14sp"
                android:textColor="#64748B"
                app:layout_constraintEnd_toEndOf="@id/tvToCity"
                app:layout_constraintTop_toBottomOf="@id/tvToCity"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Chiziq (Dashed effect berish mumkin, hozircha oddiy) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F1F5F9"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/routeLayout"/>

        <!-- 3. PASTKI QISM (Haydovchi va Narx) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/routeLayout">

            <!-- Haydovchi -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_person"
                app:civ_border_width="1dp"
                app:civ_border_color="#F1F5F9"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPersonName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ali Valiyev"
                    android:textColor="#1E293B"
                    android:textStyle="bold"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_star"
                        app:tint="#FFC107"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.8"
                        android:textSize="12sp"
                        android:textColor="#64748B"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Narx (Accent color) -->
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 000 so'm"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2E5BFF"/> <!-- Premium Blue -->

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
