<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    android:padding="24dp"
    tools:context=".PasswordCreationActivity">

    <!-- 1. Orqaga qaytish -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Orqaga"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#1E293B" />

    <!-- 2. Sarlavha -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Sizga parol kerak bo'ladi"
        android:textColor="#1E293B"
        android:textSize="28sp"
        android:textStyle="bold"
        android:letterSpacing="-0.01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack" />

    <!-- 3. Parol kiritish maydoni (Premium Style) -->
    <!-- TextInputLayout o'rniga standart va ishonchli EditText -->
    <!-- inputType="textPassword" bo'lgani uchun nuqtachalar avtomatik chiqadi -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_input_premium"
        android:hint="Parol (kamida 8 ta belgi)"
        android:inputType="textPassword"
        android:paddingHorizontal="20dp"
        android:textColor="#1E293B"
        android:textColorHint="#94A3B8"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

    <!-- 4. Tugatish (Ro'yxatdan o'tish) tugmasi -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:contentDescription="Tugatish"
        android:src="@drawable/ic_check"
        app:backgroundTint="#2E5BFF"
        app:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>
