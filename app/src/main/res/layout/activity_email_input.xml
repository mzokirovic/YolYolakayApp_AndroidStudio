<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    android:padding="24dp"
    tools:context=".EmailInputActivity">

    <!-- 1. Orqaga qaytish -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Orqaga"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#1E293B" />

    <!-- 2. Sarlavha -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Emailingiz nima?"
        android:textColor="#1E293B"
        android:textSize="28sp"
        android:textStyle="bold"
        android:letterSpacing="-0.01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack" />

    <!-- 3. Email kiritish maydoni (Premium Style) -->
    <!-- TextInputLayout o'rniga oddiy EditText ishlatamiz, chunki bizning dizaynimiz shuni taqozo qiladi -->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_input_premium"
        android:hint="Email manzilingiz"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="20dp"
        android:textColor="#1E293B"
        android:textColorHint="#94A3B8"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

    <!-- 4. Yangiliklarga obuna bo'lmaslik (Radio Button) -->
    <LinearLayout
        android:id="@+id/containerNewsOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/etEmail">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Men Yo'l-Yo'lakay-dan yangiliklar va sovg'alar olishni xohlamayman."
            android:textColor="#1E293B"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"/>

        <RadioButton
            android:id="@+id/radioNewsOptOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#2E5BFF" />
    </LinearLayout>

    <!-- 5. Kichik izoh matni -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Obuna bo'lganingizdan so'ng, xohlagan vaqtda biz bilan bog'lanish orqali buni bekor qilishingiz mumkin."
        android:textColor="#64748B"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/containerNewsOption" />

    <!-- 6. Davom etish tugmasi -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:contentDescription="Keyingisi"
        android:src="@drawable/ic_arrow_right"
        app:backgroundTint="#2E5BFF"
        app:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>
