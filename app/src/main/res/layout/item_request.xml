<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- 1. Yo'lovchi Rasmi (Avatar) -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgRequester"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_person"
            app:civ_border_width="1dp"
            app:civ_border_color="#F1F5F9"
            app:civ_circle_background_color="#F8FAFC"/>

        <!-- 2. Ism va Status -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvRequesterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ali Valiyev"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1E293B"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joy so'ramoqda"
                android:textSize="13sp"
                android:textColor="#64748B"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- 3. Rad etish (Decline) - Qizil yumshoq -->
        <FrameLayout
            android:id="@+id/btnDecline"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/shape_circle_green"
            android:backgroundTint="#FEF2F2"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_close"
                app:tint="#EF4444"/>
        </FrameLayout>

        <!-- 4. Qabul qilish (Accept) - Yashil yumshoq -->
        <FrameLayout
            android:id="@+id/btnAccept"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/shape_circle_green"
            android:backgroundTint="#ECFDF5"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_check"
                app:tint="#10B981"/>
        </FrameLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
