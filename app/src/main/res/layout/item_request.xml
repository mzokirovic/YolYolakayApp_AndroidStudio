<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/bg_rounded_white"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical"
    android:elevation="2dp">

    <!-- Yo'lovchi Rasmi (Placeholder) -->
    <ImageView
        android:id="@+id/imgRequester"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_person"
        android:padding="8dp"
        android:background="@drawable/shape_circle_gray"
        android:backgroundTint="#F5F5F5"
        android:scaleType="centerCrop"/>

    <!-- Ism va ma'lumot -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/tvRequesterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ali Valiyev"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2D3E50"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joy so'ramoqda"
            android:textSize="12sp"
            android:textColor="#757575"/>
    </LinearLayout>

    <!-- Rad etish (X) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDecline"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="0dp"
        android:text="✕"
        android:textSize="18sp"
        android:textColor="#F44336"
        android:backgroundTint="#FFEBEE"
        android:layout_marginEnd="8dp"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>

    <!-- Qabul qilish (✓) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAccept"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="0dp"
        android:text="✓"
        android:textSize="18sp"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        android:backgroundTint="#E8F5E9"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>

</LinearLayout>
