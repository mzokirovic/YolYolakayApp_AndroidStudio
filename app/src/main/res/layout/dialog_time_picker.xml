<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="24dp"
    app:cardElevation="10dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Sarlavha -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jo'nash vaqti"
            android:textColor="#1E293B"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- SOAT VA DAQIQA BARABANI -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <!-- Soat (00-23) -->
            <NumberPicker
                android:id="@+id/npHour"
                android:layout_width="60dp"
                android:layout_height="160dp"
                android:theme="@style/NumberPickerTheme"
                android:descendantFocusability="blocksDescendants"/>

            <!-- Ikkita nuqta (:) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#1E293B"
                android:layout_marginHorizontal="16dp"
                android:layout_gravity="center_vertical"/>

            <!-- Daqiqa (00-59) -->
            <NumberPicker
                android:id="@+id/npMinute"
                android:layout_width="60dp"
                android:layout_height="160dp"
                android:theme="@style/NumberPickerTheme"
                android:descendantFocusability="blocksDescendants"/>

        </LinearLayout>

        <!-- Tugmalar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- Bekor qilish -->
            <TextView
                android:id="@+id/btnCancelTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bekor qilish"
                android:textColor="#64748B"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="12dp"
                android:background="?attr/selectableItemBackground"/>

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content"/>

            <!-- OK (Tasdiqlash) -->
            <TextView
                android:id="@+id/btnConfirmTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="OK"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/bg_gradient_premium"/>
            <!-- bg_gradient_premium o'rniga o'zingizdagi ko'k fonni ishlatsangiz bo'ladi -->
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
