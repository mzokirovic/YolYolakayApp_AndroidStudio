<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ProfileFragment">

    <!-- 1. HEADER QISMI: Sarlavha va Tablar -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Sarlavha -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"/>

        <!-- TABLAR (Siz haqingizda | Hisob) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- TAB 1: Siz haqingizda -->
            <LinearLayout
                android:id="@+id/tabAboutYou"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/tvTabAbout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="12dp"
                    android:text="Siz haqingizda"
                    android:textColor="#00C896"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Aktiv chiziq -->
                <View
                    android:id="@+id/lineTabAbout"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#00C896" />
            </LinearLayout>

            <!-- TAB 2: Hisob -->
            <LinearLayout
                android:id="@+id/tabAccount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/tvTabAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="12dp"
                    android:text="Hisob"
                    android:textColor="#757575"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Passiv chiziq (ko'rinmaydi) -->
                <View
                    android:id="@+id/lineTabAccount"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#00C896"
                    android:visibility="invisible" />
            </LinearLayout>

        </LinearLayout>

        <!-- Tablar tagidagi umumiy chiziq -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"/>

    </LinearLayout>


    <!-- 2. CONTENT 1: SIZ HAQINGIZDA -->
    <ScrollView
        android:id="@+id/layoutAboutYou"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Ism va Rasm -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Foydalanuvchi"
                        android:textColor="#054652"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvUserPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+998 -- --- -- --"
                        android:textColor="#757575"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Avatar: CircleImageView ishlatilmoqda -->
                <!-- Agar bu qizil bo'lsa, build.gradle ga kutubxonani qo'shish kerak -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_person"
                    app:civ_border_color="#EEEEEE"
                    app:civ_border_width="1dp"/>

            </LinearLayout>

            <!-- Tahrirlash Tugmasi -->
            <LinearLayout
                android:id="@+id/btnEditDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingVertical="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_edit"
                    app:tint="#00C896" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Shaxsiy ma'lumotlarni tahrirlash"
                    android:textColor="#00C896"
                    android:textSize="16sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE" />

            <!-- Transport qo'shish -->
            <LinearLayout
                android:id="@+id/btnAddCar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingVertical="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_car"
                    app:tint="#00C896"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Transport qo'shish (Tez orada)"
                    android:textColor="#00C896"
                    android:textSize="16sp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <!-- 3. CONTENT 2: HISOB (Boshida yashirin) -->
    <ScrollView
        android:id="@+id/layoutAccount"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sozlamalar"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ilova versiyasi: 1.0 (MVP)"
                android:textColor="#999999"/>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
