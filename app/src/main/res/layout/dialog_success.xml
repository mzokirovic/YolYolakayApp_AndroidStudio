<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Muvaffaqiyat belgisi -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_check"
            app:tint="#4CAF50"
            android:background="@drawable/circle_background_light_green"
            android:padding="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tabriklaymiz!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E'loningiz muvaffaqiyatli joylashtirildi."
            android:textSize="16sp"
            android:textColor="#757575"
            android:gravity="center"
            android:layout_marginTop="8dp"/>

        <!-- E'lonni ko'rish tugmasi -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewTrip"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:text="E'lonni ko'rish"
            app:cornerRadius="10dp"/>

        <!-- Yopish tugmasi -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCloseDialog"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Yopish"
            android:textColor="#757575"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
