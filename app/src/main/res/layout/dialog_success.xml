<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- Muvaffaqiyat belgisi (Premium Style) -->
        <!-- Aylana fonni CardView orqali yasaymiz -->
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#EFF6FF"> <!-- Och ko'k fon -->

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_check"
                android:padding="20dp"
                app:tint="#2E5BFF"/> <!-- Asosiy brend rangi -->
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muvaffaqiyatli!"
            android:textColor="#1E293B"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sizning safaringiz tizimga muvaffaqiyatli joylandi. Haydovchilar tez orada bog'lanishadi."
            android:textColor="#64748B"
            android:gravity="center"
            android:textSize="15sp"
            android:lineSpacingMultiplier="1.2"
            android:layout_marginBottom="32dp"/>

        <!-- E'lonni ko'rish tugmasi (Premium Blue) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewTrip"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="E'lonni ko'rish"
            android:backgroundTint="#2E5BFF"
            android:textColor="@android:color/white"
            app:cornerRadius="16dp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="16sp"
            android:elevation="4dp"/>

        <!-- Yopish tugmasi -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCloseDialog"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Yopish"
            android:backgroundTint="@android:color/transparent"
            android:textColor="#94A3B8"
            style="?attr/borderlessButtonStyle"
            app:rippleColor="#F1F5F9"
            app:cornerRadius="16dp"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
