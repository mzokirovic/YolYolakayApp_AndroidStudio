<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Muvaffaqiyat belgisi -->
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_check"
            app:tint="#00C896"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muvaffaqiyatli!"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sizning safaringiz tizimga qo'shildi."
            android:textColor="#757575"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginBottom="24dp"/>

        <!-- E'lonni ko'rish tugmasi -->
        <Button
            android:id="@+id/btnViewTrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E'lonni ko'rish"
            android:backgroundTint="#00AFF5"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp"
            android:textAllCaps="false"/>

        <!-- Yopish tugmasi -->
        <Button
            android:id="@+id/btnCloseDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yopish"
            android:backgroundTint="@android:color/transparent"
            android:textColor="#757575"
            style="?attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:layout_marginTop="4dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
