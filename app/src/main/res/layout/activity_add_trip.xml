<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".AddTripActivity"
    android:fitsSystemWindows="true">

    <!-- 1. Toolbar (Orqaga qaytish) -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:src="@drawable/ic_back"
        app:tint="#00C896"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E'lon berish"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"/>

    <!-- Progress Bar (Qadamlar uchun) -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:max="100"
        android:progress="14"
        android:progressTint="#00C896"
        app:layout_constraintTop_toBottomOf="@id/btnBack"/>

    <!-- ================== QADAMLAR (STEPS) ================== -->

    <!-- STEP 1: Qayerdan -->
    <LinearLayout
        android:id="@+id/step1From"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/progressBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qayerdan yo'lga chiqasiz?"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <EditText
            android:id="@+id/etFrom"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_search_input"
            android:hint="Manzilni tanlang"
            android:paddingHorizontal="16dp"
            android:focusable="false"
            android:clickable="true"/>
    </LinearLayout>

    <!-- STEP 2: Qayerga -->
    <LinearLayout
        android:id="@+id/step2To"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/progressBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qayerga borasiz?"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <EditText
            android:id="@+id/etTo"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_search_input"
            android:hint="Manzilni tanlang"
            android:paddingHorizontal="16dp"
            android:focusable="false"
            android:clickable="true"/>
    </LinearLayout>

    <!-- STEP 3: Sana -->
    <LinearLayout
        android:id="@+id/step3Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/progressBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qaysi sanada?"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <EditText
            android:id="@+id/etDate"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_search_input"
            android:hint="Sanani tanlang"
            android:paddingHorizontal="16dp"
            android:focusable="false"
            android:clickable="true"/>
    </LinearLayout>

    <!-- STEP 4: Vaqt -->
    <LinearLayout
        android:id="@+id/step4Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/progressBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soat nechida?"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <EditText
            android:id="@+id/etTime"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_search_input"
            android:hint="Vaqtni tanlang"
            android:paddingHorizontal="16dp"
            android:focusable="false"
            android:clickable="true"/>
    </LinearLayout>

    <!-- STEP 5: O'rindiqlar -->
    <LinearLayout
        android:id="@+id/step5Seats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/progressBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yo'lovchilar uchun nechta joy bor?"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <EditText
            android:id="@+id/etSeats"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_search_input"
            android:hint="Masalan: 3"
            android:inputType="number"
            android:paddingHorizontal="16dp"/>
    </LinearLayout>

    <!-- STEP 6: Narx -->
    <LinearLayout
        android:id="@+id/step6Price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/progressBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bir kishi uchun narx qancha?"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_search_input"
            android:hint="Masalan: 50000"
            android:inputType="number"
            android:paddingHorizontal="16dp"/>
    </LinearLayout>

    <!-- STEP 7: Qo'shimcha ma'lumot -->
    <LinearLayout
        android:id="@+id/step7Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/progressBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qo'shimcha ma'lumot (ixtiyoriy)"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <EditText
            android:id="@+id/etInfo"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_search_input"
            android:hint="Masalan: Faqat ayollar, konditsioner bor..."
            android:gravity="top|start"
            android:padding="16dp"/>
    </LinearLayout>

    <!-- KEYINGISI TUGMASI (FAB) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@drawable/ic_arrow_right"
        android:backgroundTint="#00C896"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Agar ic_arrow_right bo'lmasa, ic_keyboard_right ishlating -->

</androidx.constraintlayout.widget.ConstraintLayout>
