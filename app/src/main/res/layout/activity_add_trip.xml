<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    tools:context=".AddTripActivity"
    android:fitsSystemWindows="true">

    <!-- 1. HEADER (Oq fon va Gradient Progress Bar) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_back"
            app:tint="#1E293B"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E'lon berish"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- GRADIENT PROGRESS BAR -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_marginTop="16dp"
            android:max="100"
            android:progress="14"
            android:progressDrawable="@drawable/bg_progress_gradient"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ================== QADAMLAR (STEPS) ================== -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingBottom="100dp"> <!-- FAB uchun joy -->

            <!-- STEP 1: Qayerdan -->
            <LinearLayout
                android:id="@+id/step1From"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qayerdan yo'lga chiqasiz?"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Safar boshlanadigan shahar yoki tuman"
                    android:textSize="14sp"
                    android:textColor="#64748B"
                    android:layout_marginTop="8dp"/>

                <EditText
                    android:id="@+id/etFrom"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/bg_input_premium"
                    android:hint="Manzilni tanlang"
                    android:textColorHint="#94A3B8"
                    android:textColor="#1E293B"
                    android:paddingHorizontal="20dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:drawableEnd="@drawable/ic_location_from"
                    android:drawableTint="#2E5BFF"/>
            </LinearLayout>

            <!-- STEP 2: Qayerga -->
            <LinearLayout
                android:id="@+id/step2To"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qayerga borasiz?"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B"/>

                <EditText
                    android:id="@+id/etTo"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/bg_input_premium"
                    android:hint="Manzilni tanlang"
                    android:textColorHint="#94A3B8"
                    android:textColor="#1E293B"
                    android:paddingHorizontal="20dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:drawableEnd="@drawable/ic_location_to"
                    android:drawableTint="#2E5BFF"/>
            </LinearLayout>

            <!-- STEP 3: Sana (TUZATILGAN FINAL VERSIYA) -->
            <LinearLayout
                android:id="@+id/step3Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qaysi sanada?"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B"/>

                <!-- Container (LinearLayout) ishlatamiz. Bu 100% ishonchli -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/bg_input_premium"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp">

                    <TextView
                        android:id="@+id/etDate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Sanani tanlang"
                        android:textSize="16sp"
                        android:textColor="#94A3B8"
                        android:background="@null"
                        android:clickable="true"
                        android:focusable="true"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar_today"
                        app:tint="#2E5BFF"/>
                </LinearLayout>
            </LinearLayout>

            <!-- STEP 4: Vaqt (TUZATILGAN FINAL VERSIYA) -->
            <LinearLayout
                android:id="@+id/step4Time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soat nechida?"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B"/>

                <!-- Container (LinearLayout) ishlatamiz -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/bg_input_premium"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp">

                    <TextView
                        android:id="@+id/etTime"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Vaqtni tanlang"
                        android:textSize="16sp"
                        android:textColor="#94A3B8"
                        android:background="@null"
                        android:clickable="true"
                        android:focusable="true"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_time"
                        app:tint="#2E5BFF"/>
                </LinearLayout>
            </LinearLayout>

            <!-- STEP 5: O'rindiqlar -->
            <LinearLayout
                android:id="@+id/step5Seats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nechta joy bor?"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B"/>

                <EditText
                    android:id="@+id/etSeats"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/bg_input_premium"
                    android:hint="Masalan: 3"
                    android:textColorHint="#94A3B8"
                    android:textColor="#1E293B"
                    android:inputType="number"
                    android:paddingHorizontal="20dp"
                    android:drawableEnd="@drawable/ic_person"
                    android:drawableTint="#2E5BFF"/>
            </LinearLayout>

            <!-- STEP 6: Narx -->
            <LinearLayout
                android:id="@+id/step6Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Narx qancha?"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bir kishi uchun so'mda kiriting"
                    android:textSize="14sp"
                    android:textColor="#64748B"
                    android:layout_marginTop="8dp"/>

                <EditText
                    android:id="@+id/etPrice"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/bg_input_premium"
                    android:hint="Masalan: 50 000"
                    android:textColorHint="#94A3B8"
                    android:textColor="#1E293B"
                    android:inputType="number"
                    android:paddingHorizontal="20dp"/>
            </LinearLayout>

            <!-- STEP 7: Qo'shimcha ma'lumot -->
            <LinearLayout
                android:id="@+id/step7Info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qo'shimcha ma'lumot"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B"/>

                <EditText
                    android:id="@+id/etInfo"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/bg_input_premium"
                    android:hint="Masalan: Faqat ayollar, konditsioner bor, yukxona bo'sh..."
                    android:textColorHint="#94A3B8"
                    android:textColor="#1E293B"
                    android:gravity="top|start"
                    android:padding="20dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- PREMIUM FAB (Tugma) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@drawable/ic_arrow_right"
        app:backgroundTint="#2E5BFF"
        app:tint="@android:color/white"
        app:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
