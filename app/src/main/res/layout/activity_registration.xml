<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    android:padding="24dp"
    tools:context=".RegistrationActivity">

    <!-- 1. Orqaga qaytish -->
    <!-- Logika bo'yicha bu yerda "Back" tugmasi bo'lishi kerak, shuning uchun ic_back ishlatamiz -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Orqaga"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#1E293B" />

    <!-- 2. Sarlavha -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Ismingiz nima?"
        android:textColor="#1E293B"
        android:textSize="28sp"
        android:textStyle="bold"
        android:letterSpacing="-0.01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack" />

    <!-- 3. Ism kiritish maydoni (Premium Style) -->
    <!-- TextInputLayout o'rniga sodda va ishonchli EditText -->
    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_input_premium"
        android:hint="Ism"
        android:inputType="textPersonName|textCapWords"
        android:paddingHorizontal="20dp"
        android:textColor="#1E293B"
        android:textColorHint="#94A3B8"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

    <!-- 4. Familiya kiritish maydoni (Premium Style) -->
    <EditText
        android:id="@+id/etSurname"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_input_premium"
        android:hint="Familiya"
        android:inputType="textPersonName|textCapWords"
        android:paddingHorizontal="20dp"
        android:textColor="#1E293B"
        android:textColorHint="#94A3B8"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/etName"/>

    <!-- 5. Davom etish tugmasi -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:contentDescription="Keyingisi"
        android:src="@drawable/ic_arrow_right"
        app:backgroundTint="#2E5BFF"
        app:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>
