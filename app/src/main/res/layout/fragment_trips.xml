<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9F9F9"
    tools:context=".TripsFragment">

    <!-- 1. Sarlavha -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mening safarlarim"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:paddingHorizontal="16dp"
        android:paddingTop="24dp"
        android:paddingBottom="16dp"
        android:background="@android:color/white"/>

    <!-- 2. TabLayout (Bo'sh qoldiramiz, kod orqali to'ldiriladi) -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:tabIndicatorColor="#00C896"
        app:tabSelectedTextColor="#00C896"
        app:tabTextColor="#757575"
        app:tabMode="fixed"
        app:tabGravity="fill"/>

    <!-- 3. Sahifalar o'rnashadigan joy (ViewPager) -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
