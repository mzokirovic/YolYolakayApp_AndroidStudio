<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".TripDetailsActivity">

    <!-- 1. Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBackHome"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            app:tint="#333333"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Safar tafsilotlari"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- 2. Asosiy Ma'lumotlar (Scroll bo'ladigan qism) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- KARTA 1: Yo'nalish va Vaqt -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2024-01-15 • 08:00"
                        android:textColor="#00C896"
                        android:textStyle="bold"
                        android:drawablePadding="8dp"
                        app:drawableStartCompat="@drawable/ic_time"
                        app:drawableTint="#00C896"/>

                    <!-- Yo'nalish chizig'i -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <ImageView
                            android:id="@+id/dot1"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/shape_circle_green"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="40dp"
                            android:background="#E0E0E0"
                            app:layout_constraintTop_toBottomOf="@id/dot1"
                            app:layout_constraintStart_toStartOf="@id/dot1"
                            app:layout_constraintEnd_toEndOf="@id/dot1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Qayerdan"
                            android:textSize="12sp"
                            android:textColor="#999999"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@id/dot1"
                            app:layout_constraintTop_toTopOf="@id/dot1"/>

                        <TextView
                            android:id="@+id/tvFrom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Toshkent"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@id/dot1"
                            app:layout_constraintTop_toBottomOf="@id/dot1"
                            android:layout_marginTop="16dp"/>

                        <!-- Qayerga -->
                        <ImageView
                            android:id="@+id/dot2"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/shape_circle_green"
                            android:layout_marginTop="40dp"
                            app:layout_constraintTop_toBottomOf="@id/dot1"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Qayerga"
                            android:textSize="12sp"
                            android:textColor="#999999"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@id/dot2"
                            app:layout_constraintTop_toTopOf="@id/dot2"/>

                        <TextView
                            android:id="@+id/tvTo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Samarqand"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@id/dot2"
                            app:layout_constraintTop_toBottomOf="@id/dot2"
                            android:layout_marginTop="16dp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- KARTA 2: Haydovchi -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:text="Haydovchi"
                        android:textColor="#757575"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgDriverDetails"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_person"
                            app:civ_border_color="#E0E0E0"
                            app:civ_border_width="1dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvDriverNameDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Haydovchi Ismi"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#333333"/>

                            <TextView
                                android:text="⭐ 5.0 • 12 ta safar"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Call & Message Buttons -->
                    <LinearLayout
                        android:id="@+id/contactButtonsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <Button
                            android:id="@+id/btnCallDriver"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:text="Qo'ng'iroq"
                            android:textColor="#00C896"
                            android:backgroundTint="@android:color/white"
                            app:strokeColor="#00C896"
                            app:strokeWidth="1dp"
                            app:icon="@drawable/ic_phone"
                            app:iconTint="#00C896"
                            app:cornerRadius="12dp"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:text="Xabar"
                            android:textColor="#555555"
                            android:backgroundTint="@android:color/white"
                            app:strokeColor="#E0E0E0"
                            app:strokeWidth="1dp"
                            app:cornerRadius="12dp"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- KARTA 3: Safar haqida -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="100dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:text="Safar haqida"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_person"
                            app:tint="#757575"/>
                        <TextView
                            android:text="Bo'sh o'rinlar"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvSeatsDetail"
                            android:text="3 ta"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- 3. Bottom Bar (Bron qilish paneli) -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="16dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Kishi soni (Spinner o'rniga oddiy text) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chip_blue"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:gravity="center">
            <TextView
                android:text="1 kishi"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_down"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">
            <TextView
                android:text="Jami narx"
                android:textSize="10sp"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvTotalPrice"
                android:text="75,000 so'm"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnBookAction"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Bron qilish"
            android:backgroundTint="#00C896"
            app:cornerRadius="12dp"
            android:textAllCaps="false"
            android:paddingHorizontal="24dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
