<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fitsSystemWindows="true">

    <!-- 1. HEADER (Sana va Orqaga tugmasi) -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/ic_back"
            app:tint="#00C896"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:contentDescription="Orqaga" />

        <TextView
            android:id="@+id/tvDateHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bugun, 27 Dekabr"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#2D3E50"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- 2. ASOSIY SCROLL QISMI -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- SAFAR CHIZIG'I (TIMELINE) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15:30"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2D3E50"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/circleStart"/>

                    <TextView
                        android:id="@+id/tvEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20:00"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2D3E50"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/circleEnd"/>

                    <View
                        android:id="@+id/circleStart"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/shape_circle_green"
                        android:backgroundTint="#00C896"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/tvStartTime"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:background="#E0E0E0"
                        android:layout_marginVertical="4dp"
                        app:layout_constraintStart_toStartOf="@id/circleStart"
                        app:layout_constraintEnd_toEndOf="@id/circleStart"
                        app:layout_constraintTop_toBottomOf="@id/circleStart"
                        app:layout_constraintBottom_toTopOf="@id/circleEnd"/>

                    <View
                        android:id="@+id/circleEnd"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/shape_circle_green"
                        android:backgroundTint="#00C896"
                        android:layout_marginTop="50dp"
                        app:layout_constraintStart_toStartOf="@id/circleStart"
                        app:layout_constraintTop_toBottomOf="@id/circleStart"/>

                    <TextView
                        android:id="@+id/tvFromCity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Toshkent"
                        android:textSize="18sp"
                        android:textColor="#2D3E50"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/circleStart"
                        app:layout_constraintTop_toTopOf="@id/circleStart"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/circleStart"/>

                    <TextView
                        android:id="@+id/tvToCity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Samarqand"
                        android:textSize="18sp"
                        android:textColor="#2D3E50"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/circleEnd"
                        app:layout_constraintTop_toTopOf="@id/circleEnd"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/circleEnd"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- NARX QISMI -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="20dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1 yo'lovchi uchun narx"
                    android:textSize="16sp"
                    android:textColor="#757575"/>

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50,000 so'm"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#2D3E50"/>
            </LinearLayout>

            <!-- HAYDOVCHI HAQIDA -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="20dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvDriverName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eshmat Toshmatov"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#2D3E50"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="4dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_star"
                                app:tint="#FFC107"
                                android:contentDescription="Reyting"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 4.8/5"
                                android:textSize="14sp"
                                android:textColor="#757575"
                                android:layout_marginStart="4dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Haydovchi Rasmi -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="0dp">
                        <ImageView
                            android:id="@+id/imgDriver"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_person"
                            android:scaleType="centerCrop"
                            android:background="#E0F2F1"
                            android:contentDescription="Haydovchi rasmi"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Eskirgan call textview qoldi, lekin pastda tugmalar bor -->
                <TextView
                    android:id="@+id/tvDriverLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Haydovchiga bog'lanish (pastdagi tugmalar orqali)"
                    android:textColor="#9E9E9E"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

            <!-- QO'SHIMCHA MA'LUMOT -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="20dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_car"
                        app:tint="#757575"
                        android:contentDescription="Mashina"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chevrolet Cobalt"
                        android:textSize="16sp"
                        android:textColor="#2D3E50"
                        android:layout_marginStart="16dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F0F0F0"
                    android:layout_marginVertical="12dp"/>

                <TextView
                    android:id="@+id/tvInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Konditsioner bor. Chekish mumkin emas."
                    android:textColor="#757575"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- 6. YANGI: HAYDOVCHI UCHUN SO'ROVLAR RO'YXATI (Scroll ichida) -->
            <LinearLayout
                android:id="@+id/layoutRequests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="16dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/tvRequestsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kutilayotgan so'rovlar:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2D3E50"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRequests"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    tools:listitem="@layout/item_request"
                    android:nestedScrollingEnabled="false"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 7. PASTKI TUGMALAR PANELI (YANGILANGAN) -->
    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- YO'LOVCHI UCHUN: SMS, Call va Book tugmalari -->
        <LinearLayout
            android:id="@+id/layoutPassengerActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- SMS Yozish -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSms"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="0dp"
                app:icon="@android:drawable/sym_action_chat"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="@color/white"
                app:cornerRadius="16dp"
                android:backgroundTint="#2196F3"
                android:layout_marginEnd="12dp"
                android:tooltipText="SMS yozish"/>

            <!-- Telefon qilish -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCallBottom"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="0dp"
                app:icon="@android:drawable/ic_menu_call"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="@color/white"
                app:cornerRadius="16dp"
                android:backgroundTint="#4CAF50"
                android:layout_marginEnd="12dp"
                android:tooltipText="Telefon qilish"/>

            <!-- So'rov yuborish (Asosiy tugma) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBook"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="So'rov yuborish"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="#00C896"
                app:cornerRadius="16dp"/>
        </LinearLayout>

        <!-- HAYDOVCHI UCHUN: Safarni yakunlash (Odatiy holatda yashirin) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCompleteTrip"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Safarni yakunlash"
            android:textSize="16sp"
            app:cornerRadius="16dp"
            android:backgroundTint="#FF9800"
            android:visibility="gone"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
