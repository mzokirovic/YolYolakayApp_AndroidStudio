<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fitsSystemWindows="true"> <!-- MUHIM: Tizim oynalariga moslashish -->

    <!-- 1. HEADER (Sana va Orqaga tugmasi) -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/ic_back"
            app:tint="#00C896"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:contentDescription="Orqaga" />

        <TextView
            android:id="@+id/tvDateHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bugun, 27 Dekabr"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#2D3E50"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp"> <!-- Pastdan qo'shimcha joy -->

            <!-- 2. SAFAR CHIZIG'I (TIMELINE) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <!-- Jo'nash vaqti -->
                    <TextView
                        android:id="@+id/tvStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15:30"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2D3E50"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/circleStart"/>

                    <!-- Manzilga yetish vaqti (Taxminiy) -->
                    <TextView
                        android:id="@+id/tvEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20:00"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2D3E50"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/circleEnd"/>

                    <!-- GRAFIK CHIZIQLAR -->
                    <!-- Boshlanish nuqtasi -->
                    <View
                        android:id="@+id/circleStart"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/shape_circle_green"
                        android:backgroundTint="#00C896"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/tvStartTime"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <!-- Uzun chiziq -->
                    <View
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:background="#E0E0E0"
                        android:layout_marginVertical="4dp"
                        app:layout_constraintStart_toStartOf="@id/circleStart"
                        app:layout_constraintEnd_toEndOf="@id/circleStart"
                        app:layout_constraintTop_toBottomOf="@id/circleStart"
                        app:layout_constraintBottom_toTopOf="@id/circleEnd"/>

                    <!-- Tugash nuqtasi -->
                    <View
                        android:id="@+id/circleEnd"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/shape_circle_green"
                        android:backgroundTint="#00C896"
                        android:layout_marginTop="50dp"
                        app:layout_constraintStart_toStartOf="@id/circleStart"
                        app:layout_constraintTop_toBottomOf="@id/circleStart"/>

                    <!-- MANZILLAR -->
                    <TextView
                        android:id="@+id/tvFromCity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Toshkent"
                        android:textSize="18sp"
                        android:textColor="#2D3E50"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/circleStart"
                        app:layout_constraintTop_toTopOf="@id/circleStart"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/circleStart"/>

                    <TextView
                        android:id="@+id/tvToCity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Samarqand"
                        android:textSize="18sp"
                        android:textColor="#2D3E50"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/circleEnd"
                        app:layout_constraintTop_toTopOf="@id/circleEnd"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/circleEnd"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- 3. NARX QISMI -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="20dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1 yo'lovchi uchun narx"
                    android:textSize="16sp"
                    android:textColor="#757575"/>

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50,000 so'm"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#2D3E50"/>
            </LinearLayout>

            <!-- 4. HAYDOVCHI HAQIDA -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="20dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvDriverName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eshmat Toshmatov"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#2D3E50"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="4dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_star"
                                app:tint="#FFC107"
                                android:contentDescription="Reyting"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 4.8/5"
                                android:textSize="14sp"
                                android:textColor="#757575"
                                android:layout_marginStart="4dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Haydovchi Rasmi (Dumaloq) -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="0dp">
                        <ImageView
                            android:id="@+id/imgDriver"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_person"
                            android:scaleType="centerCrop"
                            android:background="#E0F2F1"
                            android:contentDescription="Haydovchi rasmi"/>
                    </androidx.cardview.widget.CardView>

                    <!-- Ikonka (Tuzatilgan) -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_forward"
                        app:tint="#BDBDBD"
                        android:layout_marginStart="16dp"
                        android:contentDescription="Batafsil"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/btnCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Haydovchiga bog'lanish"
                    android:textColor="#00C896"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingVertical="12dp"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

            <!-- 5. QO'SHIMCHA MA'LUMOT VA MASHINA -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="20dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <!-- Mashina -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_car"
                        app:tint="#757575"
                        android:contentDescription="Mashina"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chevrolet Cobalt"
                        android:textSize="16sp"
                        android:textColor="#2D3E50"
                        android:layout_marginStart="16dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F0F0F0"
                    android:layout_marginVertical="12dp"/>

                <!-- Info -->
                <TextView
                    android:id="@+id/tvInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Konditsioner bor. Chekish mumkin emas. Yukxona bo'sh."
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 6. PASTKI TUGMA -->
    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Band qilish tugmasi -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBook"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Davom etish"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#00C896"
            app:cornerRadius="28dp"/>

        <!-- Safarni yakunlash tugmasi (Haydovchi uchun) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCompleteTrip"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Safarni yakunlash"
            android:textSize="16sp"
            app:cornerRadius="10dp"
            android:backgroundTint="#FF9800"
            android:layout_marginTop="12dp"
            android:visibility="gone"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

