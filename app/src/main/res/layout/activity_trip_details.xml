<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <!-- 1. HEADER (Sana va Orqaga tugmasi) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_back"
            app:tint="#1E293B"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Orqaga"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Sarlavha -->
        <TextView
            android:id="@+id/tvDateHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bugun, 27 Dekabr"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 2. ASOSIY SCROLL QISMI -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- YO'NALISH (TIMELINE) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <!-- START SECTION -->
                    <TextView
                        android:id="@+id/tvStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13:50"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1E293B"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/circleStart"
                        app:layout_constraintBottom_toBottomOf="@id/circleStart"/>

                    <View
                        android:id="@+id/circleStart"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/shape_circle_green"
                        android:backgroundTint="#2E5BFF"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/tvStartTime"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <!-- LOCATION NAMES -->
                    <TextView
                        android:id="@+id/tvFromCity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Toshkent"
                        android:textSize="18sp"
                        android:textColor="#1E293B"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/circleStart"
                        app:layout_constraintTop_toTopOf="@id/circleStart"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/circleStart"/>

                    <!-- LINE -->
                    <View
                        android:layout_width="2dp"
                        android:layout_height="40dp"
                        android:background="#E2E8F0"
                        android:layout_marginVertical="4dp"
                        app:layout_constraintStart_toStartOf="@id/circleStart"
                        app:layout_constraintEnd_toEndOf="@id/circleStart"
                        app:layout_constraintTop_toBottomOf="@id/circleStart"/>

                    <!-- END SECTION -->
                    <TextView
                        android:id="@+id/tvEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20:00"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#64748B"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/circleEnd"
                        app:layout_constraintBottom_toBottomOf="@id/circleEnd"/>

                    <View
                        android:id="@+id/circleEnd"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/shape_circle_green"
                        android:backgroundTint="#2E5BFF"
                        android:layout_marginTop="50dp"
                        app:layout_constraintStart_toStartOf="@id/circleStart"
                        app:layout_constraintTop_toBottomOf="@id/circleStart"/>

                    <TextView
                        android:id="@+id/tvToCity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Samarqand"
                        android:textSize="18sp"
                        android:textColor="#1E293B"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/circleEnd"
                        app:layout_constraintTop_toTopOf="@id/circleEnd"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/circleEnd"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- NARX QISMI -->
            <!-- NARX VA TO'LOV TURI (YANGILANGAN - SIG'ISH MUAMMOSI HAL QILINDI) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Narx qatori -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1 yo'lovchi narxi"
                            android:textSize="16sp"
                            android:textColor="#64748B"/>

                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50,000 so'm"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#2E5BFF"/>
                    </LinearLayout>

                    <!-- Chiziq -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F1F5F9"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"/>

                    <!-- To'lov turi (Moslashuvchan Layout) -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iconCash"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_cash"
                            app:tint="#10B981"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:id="@+id/tvPaymentTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To'lov turi: Naqd"
                            android:textSize="14sp"
                            android:textColor="#1E293B"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"
                            app:layout_constraintStart_toEndOf="@id/iconCash"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="(Haydovchiga)"
                            android:textSize="14sp"
                            android:textColor="#64748B"
                            android:gravity="end"
                            android:layout_marginStart="4dp"
                            app:layout_constraintStart_toEndOf="@id/tvPaymentTitle"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <!-- HAYDOVCHI HAQIDA -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Haydovchi"
                                android:textSize="12sp"
                                android:textColor="#94A3B8"
                                android:textAllCaps="true"/>

                            <TextView
                                android:id="@+id/tvDriverName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Eshmat Toshmatov"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#1E293B"
                                android:layout_marginTop="2dp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="4dp">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_star"
                                    app:tint="#FFC107"
                                    android:contentDescription="Reyting"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" 4.8"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="#1E293B"
                                    android:layout_marginStart="4dp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Haydovchi Rasmi -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            app:cardCornerRadius="28dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#F1F5F9">
                            <ImageView
                                android:id="@+id/imgDriver"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_person"
                                android:scaleType="centerCrop"
                                android:padding="8dp"
                                app:tint="#94A3B8"
                                android:contentDescription="Haydovchi rasmi"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- QO'SHIMCHA MA'LUMOT (MASHINA & INFO) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <!-- MASHINA -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_car"
                            app:tint="#2E5BFF"
                            android:contentDescription="Mashina"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chevrolet Cobalt"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#1E293B"
                            android:layout_marginStart="16dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E2E8F0"
                        android:layout_marginVertical="12dp"/>

                    <!-- INFO -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_info"
                            app:tint="#64748B"
                            android:layout_marginTop="2dp"/>
                        <TextView
                            android:id="@+id/tvInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Konditsioner bor. Chekish mumkin emas. Yukxona bo'sh."
                            android:textColor="#64748B"
                            android:textSize="14sp"
                            android:layout_marginStart="16dp"
                            android:lineSpacingExtra="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 6. YANGI: HAYDOVCHI UCHUN SO'ROVLAR RO'YXATI (Scroll ichida) -->
            <LinearLayout
                android:id="@+id/layoutRequests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="16dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/tvRequestsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kutilayotgan so'rovlar:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRequests"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    tools:listitem="@layout/item_request"
                    android:nestedScrollingEnabled="false"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 7. PASTKI TUGMALAR PANELI -->
    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- YO'LOVCHI UCHUN: SMS, Call va Book tugmalari -->
        <LinearLayout
            android:id="@+id/layoutPassengerActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- SMS Yozish -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSms"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="0dp"
                app:icon="@android:drawable/sym_action_chat"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="#2E5BFF"
                app:cornerRadius="16dp"
                app:strokeColor="#E2E8F0"
                app:strokeWidth="1dp"
                android:backgroundTint="@android:color/white"
                android:elevation="0dp"
                android:layout_marginEnd="12dp"
                android:tooltipText="SMS yozish"/>

            <!-- Telefon qilish -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCallBottom"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="0dp"
                app:icon="@android:drawable/ic_menu_call"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="#10B981"
                app:cornerRadius="16dp"
                app:strokeColor="#E2E8F0"
                app:strokeWidth="1dp"
                android:backgroundTint="@android:color/white"
                android:elevation="0dp"
                android:layout_marginEnd="12dp"
                android:tooltipText="Telefon qilish"/>

            <!-- So'rov yuborish (Universal Tugma) -->
            <!-- Kotlin kodi orqali matni o'zgaradi:
                 1. "Joy band qilish"
                 2. "So'rov yuborildi..."
                 3. "Siz qabul qilindingiz" -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBook"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Joy band qilish"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="16dp"
                android:background="@drawable/bg_gradient_premium"
                app:backgroundTint="@null"
                android:elevation="4dp"/>

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
